{
  "version": 2,
  "name": "contours.io",
  "builds": [
    { "src": "api/dist/main.js", "use": "@now/node" },
    {
      "src": "app/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/dist/main.js" },
    { "src": "/(.*)", "dest": "/app/$1" }
  ]
}
